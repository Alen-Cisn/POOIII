{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Blazor WebAssembly Debug",
            "type": "blazorwasm",
            "request": "launch",
            "url": "http://localhost:5253",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "ASP.NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Txt.Api/bin/Debug/net8.0/Txt.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "targetArchitecture": "x86_64",
            "launchBrowser": {
                "enabled": true,
                "linux": {
                    "command": "/usr/bin/librewolf",
                }
            }
        }
    ],
    "runtimeExecutable": "/usr/bin/librewolf"
}