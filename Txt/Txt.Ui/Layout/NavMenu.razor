<HxSidebar @bind-Collapsed="Collapsed">
    <HeaderTemplate>
        <HxSidebarBrand BrandName="Brand name" BrandNameShort="BN" />
    </HeaderTemplate>

    <ItemsTemplate>
        <HxSidebarItem Text="Home" Icon="BootstrapIcon.HouseDoorFill" TooltipText="Home" Href="/" />
        <HxSidebarItem Text="Counter" Icon="BootstrapIcon.PlusSquareFill" TooltipText="Counter" Href="/counter" />
        <HxSidebarItem Text="Weather" Icon="BootstrapIcon.ListNested" TooltipText="Wheather" Href="/weather" />
    </ItemsTemplate>

    <FooterTemplate>
        <HxSidebarFooter Href="/login" Icon="BootstrapIcon.Person"
            Text="@(context.SidebarCollapsed ? null : "Login")" />
    </FooterTemplate>
</HxSidebar>

@code {
    public bool Collapsed { get; set; }
}