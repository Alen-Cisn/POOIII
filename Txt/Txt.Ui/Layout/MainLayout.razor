            OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h3" HtmlTag="h1" Class="app-title">
            txt
        </MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/Alen-Cisn/POOIII/tree/main/Txt"
            Target="_blank" />
    </MudAppBar>
    <NavMenu @bind-Open="@_open" />
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

